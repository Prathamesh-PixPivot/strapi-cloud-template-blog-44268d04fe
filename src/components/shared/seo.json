      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": false,
      "maxLength": 160
    },
    "keywords": {
      "type": "text",
      "required": false
    },
    "shareImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "canonicalURL": {
      "type": "string",
      "required": false
    },
    "metaRobots": {
      "type": "enumeration",
      "enum": [
        "index, follow",
        "index, nofollow",
        "noindex, follow",
        "noindex, nofollow"
      ],
      "default": "index, follow",
      "required": false
